MnbToolbarButton {
  background-color: #fff0;
}

MnbToolbarButton:checked {
  border-image: url("file://@pkgdatadir@/theme/panel/toolbar-button-active.png") 0 stretch;
}

MnbToolbarButton:hover, MnbToolbarButton:active {
  border-image: url("file://@pkgdatadir@/theme/panel/toolbar-button-hover.png") 0 stretch;
}

MnbToolbarButton#state1 {
  background-image: url("file://@pkgdatadir@/theme/panel/apps-normal.png");
}
MnbToolbarButton#state1:hover, MnbToolbarButton#state1:active, MnbToolbarButton#state1:checked  {
  background-image: url("file://@pkgdatadir@/theme/panel/apps-coloured.png");
}

MnbToolbarButton#state2 {
  background-image: url("file://@pkgdatadir@/theme/panel/internet-normal.png");
}
MnbToolbarButton#state2:hover, MnbToolbarButton#state2:active, MnbToolbarButton#state2:checked  {
  background-image: url("file://@pkgdatadir@/theme/panel/internet-coloured.png");
}
